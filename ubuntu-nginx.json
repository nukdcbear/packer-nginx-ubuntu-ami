{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{user `ami_name`}}",
          "root-device-type": "ebs"
        },
        "owners": ["{{user `ami_owners`}}"],
        "most_recent": true
      },
      "tags": {
        "Name": "nginx-ubuntu-{{timestamp}}",
        "Description": "Description"
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "nginx-ubuntu-{{timestamp}}",
      "ami_regions": ["us-east-2"],
      "subnet_id": "subnet-06d2f1d8a5a619fab",
      "vpc_id": "vpc-0e2a0b0d235345dd2"
    }],
    "provisioners": [
      {
        "type": "file",
        "source": "scripts/nginx_setup.sh",
        "destination": "/tmp/nginx_setup.sh"
      },
      {
        "type": "file",
        "source": "scripts/cleanup.sh",
        "destination": "/tmp/cleanup.sh"
      },
      {
        "type": "shell",
        "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
        "inline": [
          "whoami",
          "cd /tmp",
          "chmod +x nginx_setup.sh",
          "chmod +x cleanup.sh",
          "ls -alh /tmp",
          "./nginx_setup.sh",
          "sleep 10",
          "./cleanup.sh"
        ]
      }
    ]
  }